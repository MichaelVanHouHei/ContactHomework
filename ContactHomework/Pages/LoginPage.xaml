<Page x:Class="ContactHomework.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ContactHomework.Pages"
      mc:Ignorable="d"
      Title="Login" Height="207.093" Width="533.737">

    <Grid>
        <Label Content="account" HorizontalAlignment="Left" Margin="13,23,0,0" VerticalAlignment="Top"/>
        <Label Content="password" HorizontalAlignment="Left" Margin="13,82,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="8" Margin="85,22,0,0" TextWrapping="Wrap" Text="{Binding username,Mode=TwoWay}" VerticalAlignment="Top" Width="430"/>
        <TextBox HorizontalAlignment="Left" Height="8" Margin="85,82,0,0" TextWrapping="Wrap" Text="{Binding password,Mode=TwoWay}" VerticalAlignment="Top" Width="430"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="311,145,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <CheckBox Content="remember me" HorizontalAlignment="Left" Margin="85,122,0,0" VerticalAlignment="Top"/>
        <Button Content="Register account" HorizontalAlignment="Left" Margin="130,145,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.228,0.094" Click="Button_Click_1"/>

    </Grid>
</Page>
